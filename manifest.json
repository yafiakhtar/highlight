{
  "manifest_version": 3,
  "name": "highlight",
  "version": "1.0.1",
  "description": "glorified highlighter",
  "icons": {
    "16": "assets/highlight16.png",
    "32": "assets/highlight32.png",
    "48": "assets/highlight48.png",
    "128": "assets/highlight128.png"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/highlight16.png",
      "32": "assets/highlight32.png",
      "48": "assets/highlight48.png",
      "128": "assets/highlight128.png"
    },
    "default_popup": "popup.html",
    "default_title": "highlight"
  },
  "commands": {
    "highlight-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Highlight selected text"
    }
  }
}
